<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	android:versionCode="1" android:versionName="1.0"
	package="org.peterbaldwin.client.android.tinyurl">
	<uses-permission android:name="android.permission.INTERNET" />
	<application android:label="@string/app_name" android:icon="@drawable/icon">
		<activity android:name="CreateTinyUrlActivity" android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".SendTinyUrlActivity" android:theme="@android:style/Theme.Dialog">
			<intent-filter>
				<action android:name="android.intent.action.SEND" />
				<category android:name="android.intent.category.DEFAULT" />
				<data android:mimeType="text/plain" />
			</intent-filter>
		</activity>
	</application>
</manifest> 
